<!-- views/books/show.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title><%= book.title %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" type="image/x-icon" href="/favicon.png">
</head>
<body id="allPage">
    <header>
        <%- include('../partials/navbar') %>
    </header>
    <div class="detailed-book">
        <h1><%= book.title %></h1>
        <p>Author: <%= book.author %></p>
        <p>Genre: <%= book.genre %></p>
        <p>ISBN: <%= book.isbn %></p>
        <% if (book.publicationDate) { %>
            <p>Publication Date: <%= book.publicationDate.toDateString() %></p>
        <% } %>
        <p>Description: <%= book.description %></p>
        
        <div class="buttons">
            <a href="/books/<%= book._id %>/edit" class="edit">Edit</a>
        
            <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
                <button type="submit" class="delete">Delete</button>
            </form>
        </div>
    </div>
    <footer>
        <p>&copy; Copyright Apex Library - Centennial College - Summer 23</p>
      </footer>
</body>
</html>
